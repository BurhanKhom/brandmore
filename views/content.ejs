<% include partials/homeHeader.html%>
<div id="allProducts" class="container">

  <%if(products.length > 0){%>
  <h1 class="contentName"><%=products[0].name;%></h1>
  <hr>
  <div class="container">
    <div class="row">
    <% for(var i=0; i<products.length; i++){ %>


        <div class="col-lg-4 product">
          <div class="content">
            <img class="img-thumbnail image-holder" src="<%=products[i].image[0]%>" alt="">
          <div class="details">
            <h5><%=products[i].title%></h5>
            <span style="color:gray"><%=products[i].type%></span>
            <span class="price"><%=products[i].price%>&nbsp;<strike style="color:gray"><%=(products[i].price+500)%></strike></span>
          </div>
          <div class="Add" style="margin-left:8px">
                <a href=<%="/collections/"+products[i].link+"/product/?id="+products[i].id%>><button type="button" class="btn btn-dark">Select</button></a>
          </div>
        </div>
      </div>

    <%}%>
    </div>
  </div>
  <%}else{%>
    <h3 class="contentName">No Products Found</h3>
    <hr>
  <%}%>
</div>
<br>
<% include partials/homeFooter.html%>
